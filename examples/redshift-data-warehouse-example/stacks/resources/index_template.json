{
  "index_patterns": [
      "movies-*"
  ],
  "template": {
      "settings": {
          "index": {
              "number_of_shards": 1,
              "number_of_replicas": 0
          }
      },
      "mappings": {
          "properties": {
              "title": {
                  "type": "text"
              },
              "year": {
                  "type": "integer"
              }
          }
      }
  }
}